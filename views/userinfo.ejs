<div id="currentUserData" class="card">
  <div id="userImg">
    <img src="../images/operator.png" style="width: 90%; margin: 5% 5% auto;" />
  </div>

  <div id="btnContainer">
    <div class="btn-for-call">
      <button type="submit" id="ringOff" class="btn btn-primary btn-lg" ng-click="rtc.stop()">Ring Off</button>
    </div>
    <div class="btn-for-call">
      <button type="submit" id="pause" class="btn btn-primary btn-lg" ng-click="rtc.pause()">Pause</button>
    </div>

    <!-- <button style="font-size: 20px; padding-left: 30px; padding-right: 30px;" type="submit" class="btn btn-primary btn-lg" ng-click="rtc.checkVariables()">Check Variabili</button> -->
  </div>

  <div name="oncall" class="is-on-call">
    <div class="btn btn-primary btn-on-call">On Call</div>
  </div>

  <div name="offcall" class="is-on-call">
    <div class="btn btn-primary btn-offline">Offline</div>
  </div>

  <div id="userData">
    <!-- <div id="userData" ng-repeat="user in users"> -->
    <p>Operator : {{user.name}} {{user.surname}}</p>
    <p id="op_ident">Op.Ident.: {{user.username}} </p> <!-- took from RemoteStreamsController using $rootScope -->
    <p>Location: {{user.location}}</p>
    <p id='p_user_alert'></p>
  </div>

  <!-- <img src="../images/googleMap.jpg" style="margin-left: 4px;" /> -->


  <div  id="map" class="map"></div>
    <script>
      function initMap() {
        var mapDiv = document.getElementById('map');
        var map = new google.maps.Map(mapDiv, {
          center: {lat: 45.0851397, lng: 7.6108084},
          zoom: 14
        });
      }
    </script>

